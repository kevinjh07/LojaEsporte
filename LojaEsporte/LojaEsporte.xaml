<Window 
       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
       Title="Loja de esporte" Width="640" Height="480" 
       WindowStartupLocation="CenterScreen"
       ResizeMode="NoResize">
    <Grid>
        <StackPanel HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <Menu>
                <MenuItem Header="Produtos">
                    <MenuItem Header="Cadastro" Click="cadastro"/>
                </MenuItem>
                <MenuItem Header="Atualizar" Click="atualizar"/>
            </Menu>
            <StackPanel>
                <ListView x:Name="lvProdutos" Height="430">
                    <ListView.View>
                        <GridView AllowsColumnReorder="False">
                            <GridViewColumn Header="Nome" DisplayMemberBinding="{Binding nome}" Width="200" />
                            <GridViewColumn Header="Preco" DisplayMemberBinding="{Binding preco}" Width="100" />
                            <GridViewColumn Header="Descricao" DisplayMemberBinding="{Binding descricao}" Width="150" />
                            <GridViewColumn Header="Categoria" DisplayMemberBinding="{Binding categoria}" Width="150" />
                        </GridView>
                    </ListView.View>
                </ListView>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window> 
 